---
import IrelandLayout from '../layouts/IrelandLayout.astro';
import '../styles/ireland-original.css';

// Tour data with all 6 tours from the original
const tours = [
  {
    id: 'ancestral',
    title: 'Slieve League Cliffs',
    description: 'Perched on the rugged coastline of County Donegal, the Slieve League Cliffs stand as a testament to Ireland\'s natural grandeur.',
    image: 'https://res.cloudinary.com/dhpnoabqq/image/upload/c_fill,f_auto,fl_progressive,g_auto,h_320,q_auto:good,w_400/v1/ireland-tours/ireland-tours/irish-coastal-cliffs'
  },
  {
    id: 'atlantic', 
    title: 'Cliffs of Moher',
    description: 'Experience County Clare\'s iconic coastal treasure, Ireland\'s most visited natural attraction with stunning Atlantic views.',
    image: 'https://res.cloudinary.com/dhpnoabqq/image/upload/c_fill,f_auto,fl_progressive,g_auto,h_320,q_auto:good,w_400/v1/ireland-tours/ireland-tours/cliffs-of-moher'
  },
  {
    id: 'literary',
    title: 'Midleton Distillery', 
    description: 'Discover Ireland\'s celebrated whiskey tradition in County Cork, home to Jameson and Ireland\'s finest whiskey heritage.',
    image: 'https://res.cloudinary.com/dhpnoabqq/image/upload/c_fill,f_auto,fl_progressive,g_auto,h_320,q_auto:good,w_400/v1/ireland-tours/ireland-tours/midleton-distillery'
  },
  {
    id: 'hidden',
    title: 'Irish Emigration Heritage',
    description: 'Experience Ireland\'s poignant emigration story aboard the authentic Dunbrody Famine Ship in New Ross, County Wexford.',
    image: 'https://res.cloudinary.com/dhpnoabqq/image/upload/c_fill,f_auto,fl_progressive,g_auto,h_320,q_auto:good,w_400/v1/ireland-tours/ireland-tours/dunbrody-ship'
  },
  {
    id: 'kerry',
    title: 'Hook Lighthouse',
    description: 'Experience 800 years of maritime history at one of the world\'s oldest working lighthouses on County Wexford\'s scenic coast.',
    image: 'https://res.cloudinary.com/dhpnoabqq/image/upload/c_fill,f_auto,fl_progressive,g_auto,h_320,q_auto:good,w_400/v1/ireland-tours/ireland-tours/hook-lighthouse'
  },
  {
    id: 'castles',
    title: 'Blarney Castle',
    description: 'Experience Ireland\'s most enchanting castle in County Cork, home to the legendary Blarney Stone and magnificent gardens.',
    image: 'https://res.cloudinary.com/dhpnoabqq/image/upload/c_fill,f_auto,fl_progressive,g_auto,h_320,q_auto:good,w_400/v1/ireland-tours/ireland-tours/blarney-castle'
  }
];

const testimonials = [
  { text: '"Our chauffeur felt like family by the end. The care and attention to detail was extraordinary."', author: 'Margaret, Boston', avatar: 'M' },
  { text: '"I found my great-grandmother\'s village. The emotional support throughout was incredible."', author: 'Susan, Toronto', avatar: 'S' },
  { text: '"Every day was perfectly paced. No rushing, no stress—just pure connection to the land."', author: 'Dorothy, Melbourne', avatar: 'D' },
  { text: '"The local insights made all the difference. We experienced Ireland as insiders, not tourists."', author: 'Ruth, San Francisco', avatar: 'R' },
  { text: '"Luxury without pretense. Genuine warmth and expertise throughout our entire journey."', author: 'Joan, London', avatar: 'J' },
  { text: '"They understood exactly what we needed—comfort, knowledge, and authentic Irish hospitality."', author: 'Catherine, New York', avatar: 'C' }
];
---

<IrelandLayout>
  <!-- Header Navigation -->
  <header class="header">
    <div class="container">
      <div class="nav-wrapper">
        <div class="logo">
          <img src="/guided-tours-ireland/logo.png" alt="Guided Tours To Ireland Logo" class="logo-img">
          <span class="logo-text">Guided Tours To Ireland</span>
        </div>
        <nav class="nav">
          <button class="nav-toggle" aria-label="Toggle navigation menu">
            <span class="hamburger-line"></span>
            <span class="hamburger-line"></span>
            <span class="hamburger-line"></span>
          </button>
          <ul class="nav-list">
            <li><a href="#about" class="nav-link">About</a></li>
            <li><a href="#features" class="nav-link">Services</a></li>
            <li><a href="#tours" class="nav-link">Tours</a></li>
            <li><a href="#guides" class="nav-link">Chauffeurs</a></li>
            <li><a href="#testimonials" class="nav-link">Stories</a></li>
            <li><a href="#contact" class="nav-link">Contact</a></li>
          </ul>
        </nav>
      </div>
    </div>
  </header>

  <!-- Hero Section -->
  <section class="hero" id="hero" style={`background-image: url('https://res.cloudinary.com/dhpnoabqq/image/upload/c_fill,f_auto,fl_progressive,g_auto,h_1080,q_auto:good,w_1920/v1/ireland-tours/ireland-tours/irish-cliffs')`}>
    <div class="hero-content">
      <div class="container">
        <div class="hero-text">
          <h1 class="hero-title">We Don't Just Guide Tours.<br>We Bring You Home.</h1>
          <p class="hero-subtitle">Private, meaningful Irish journeys led by expert chauffeurs.</p>
          <a href="#contact" class="cta-button">Request a Callback</a>
        </div>
      </div>
    </div>
    <div class="hero-overlay"></div>
  </section>

  <!-- Features Section -->
  <section class="features" id="features">
    <div class="container">
      <div class="section-header">
        <h2 class="section-title">Why Choose Our Private Tours</h2>
      </div>
      <div class="features-grid">
        <div class="feature-card">
          <div class="feature-icon">
            <svg width="48" height="48" viewBox="0 0 48 48" fill="none">
              <path d="M24 4L6 14v20c0 11.05 7.7 21.35 18 24 10.3-2.65 18-12.95 18-24V14L24 4z" stroke="currentColor" stroke-width="2" fill="none"/>
              <path d="M18 24l6 6 12-12" stroke="currentColor" stroke-width="2"/>
            </svg>
          </div>
          <h3 class="feature-title">Expert Local Knowledge</h3>
          <p class="feature-description">Your chauffeur isn't just a driver—they're your personal guide with deep knowledge of Irish history, culture, and hidden gems.</p>
        </div>
        <div class="feature-card">
          <div class="feature-icon">
            <svg width="48" height="48" viewBox="0 0 48 48" fill="none">
              <circle cx="24" cy="24" r="20" stroke="currentColor" stroke-width="2" fill="none"/>
              <path d="M16 24h16M24 16v16" stroke="currentColor" stroke-width="2"/>
            </svg>
          </div>
          <h3 class="feature-title">Completely Personalized</h3>
          <p class="feature-description">Every journey is crafted around your interests, pace, and family heritage. No rigid schedules or crowded buses.</p>
        </div>
        <div class="feature-card">
          <div class="feature-icon">
            <svg width="48" height="48" viewBox="0 0 48 48" fill="none">
              <path d="M20 6a14 14 0 1 0 14 14c0-9.33-8-24-14-24z" stroke="currentColor" stroke-width="2" fill="none"/>
              <path d="M24 20a4 4 0 1 1-8 0 4 4 0 0 1 8 0z" stroke="currentColor" stroke-width="2" fill="none"/>
            </svg>
          </div>
          <h3 class="feature-title">Stress-Free Comfort</h3>
          <p class="feature-description">Luxury vehicles, door-to-door service, and all logistics handled. Simply relax and connect with the Ireland of your dreams.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Popular Tours Section -->
  <section class="tours" id="tours">
    <div class="container">
      <div class="section-header">
        <h2 class="section-title">Popular Journeys</h2>
      </div>
      <div class="tours-grid">
        {tours.map((tour) => (
          <div class="tour-card-container">
            <div class="flip-card-inner">
              <div class="flip-card-front">
                <h3 class="tour-title">{tour.title}</h3>
                <p class="tour-description">{tour.description}</p>
              </div>
              <div class="flip-card-back">
                <div class="tour-image" style={`background-image: url('${tour.image}')`}></div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Featured Testimonial Section -->
  <section class="featured-testimonial" id="testimonial">
    <div class="container">
      <div class="testimonial-content">
        <blockquote class="testimonial-quote">
          "I didn't lift a finger, yet I felt more connected than I have in years. Every moment was hand-picked for us. It wasn't a tour. It was a return."
        </blockquote>
        <cite class="testimonial-attribution">— Linda, Chicago</cite>
      </div>
    </div>
  </section>

  <!-- Reviews Section -->
  <section class="reviews" id="testimonials">
    <div class="container">
      <div class="section-header">
        <h2 class="section-title">Stories From Our Guests</h2>
      </div>
      <div class="reviews-grid">
        {testimonials.map((review) => (
          <div class="review-card">
            <div class="review-avatar">{review.avatar}</div>
            <p class="review-text">{review.text}</p>
            <p class="review-author">{review.author}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="contact" id="contact">
    <div class="container">
      <div class="section-header">
        <h2 class="section-title">Start Your Irish Journey</h2>
        <p class="section-subtitle">Let us craft your perfect Irish experience</p>
      </div>
      <form class="contact-form" action="https://formsubmit.co/maeve.tours@gmail.com" method="POST">
        <input type="hidden" name="_subject" value="New Tour Inquiry">
        <input type="hidden" name="_captcha" value="false">
        
        <div class="form-group">
          <label for="name" class="form-label">Your Name</label>
          <input type="text" id="name" name="name" class="form-input" required>
        </div>
        
        <div class="form-group">
          <label for="email" class="form-label">Email Address</label>
          <input type="email" id="email" name="email" class="form-input" required>
        </div>
        
        <div class="form-group">
          <label for="phone" class="form-label">Phone Number (Optional)</label>
          <input type="tel" id="phone" name="phone" class="form-input">
        </div>
        
        <div class="form-group">
          <label for="travel-dates" class="form-label">Preferred Travel Dates</label>
          <input type="text" id="travel-dates" name="travel_dates" class="form-input" placeholder="e.g., June 2025">
        </div>
        
        <div class="form-group">
          <label for="message" class="form-label">Tell Us About Your Dream Trip</label>
          <textarea id="message" name="message" class="form-textarea" rows="5" placeholder="What would make your Irish journey special?"></textarea>
        </div>
        
        <button type="submit" class="cta-button">Request Your Callback</button>
      </form>
    </div>
  </section>

  <!-- Footer -->
  <footer class="footer">
    <div class="container">
      <p class="footer-text">© 2025 Guided Tours To Ireland. All rights reserved.</p>
    </div>
  </footer>

  <!-- Mobile Menu Script -->
  <script>
    const navToggle = document.querySelector('.nav-toggle');
    const navList = document.querySelector('.nav-list');
    const navLinks = document.querySelectorAll('.nav-link');

    navToggle?.addEventListener('click', () => {
      navList?.classList.toggle('active');
    });

    navLinks.forEach(link => {
      link.addEventListener('click', () => {
        navList?.classList.remove('active');
      });
    });
  </script>
</IrelandLayout>
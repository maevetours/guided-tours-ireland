<IrelandLayout>
  <style>
    /* Fix icon alignment */
    .feature-icon {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 60px;
    }
    
    /* Tour modals */
    .modal {
      display: none;
      position: fixed;
      z-index: 1000;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0,0,0,0.8);
      overflow-y: auto;
    }
    
    .modal.active {
      display: block;
    }
    
    .modal-content {
      background-color: white;
      margin: 5% auto;
      padding: 2rem;
      width: 90%;
      max-width: 800px;
      border-radius: var(--border-radius);
      position: relative;
    }
    
    .modal-close {
      position: absolute;
      right: 1rem;
      top: 1rem;
      font-size: 2rem;
      cursor: pointer;
      color: hsl(var(--text-secondary));
    }
    
    .modal-close:hover {
      color: hsl(var(--text-primary));
    }
    
    .modal h3 {
      color: hsl(var(--accent-primary));
      margin-bottom: 1rem;
    }
    
    .modal-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 2rem;
      margin-top: 2rem;
    }
    
    .modal-section h4 {
      color: hsl(var(--text-primary));
      margin-bottom: 0.5rem;
    }
    
    .modal-list {
      list-style: none;
      padding: 0;
    }
    
    .modal-list li {
      padding: 0.5rem 0;
      color: hsl(var(--text-secondary));
    }
    
    .modal-list li:before {
      content: "✓ ";
      color: hsl(var(--accent-primary));
      font-weight: bold;
      margin-right: 0.5rem;
    }
    
    @media (max-width: 768px) {
      .modal-grid {

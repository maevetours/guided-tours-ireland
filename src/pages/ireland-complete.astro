  <!-- All JavaScript -->
  <script>
    // Hamburger Menu
    const navToggle = document.getElementById('navToggle');
    const navList = document.getElementById('navList');
    const navLinks = document.querySelectorAll('.nav-link');

    navToggle?.addEventListener('click', () => {
      navToggle.classList.toggle('active');
      navList?.classList.toggle('active');
    });

    navLinks.forEach(link => {
      link.addEventListener('click', () => {
        navToggle?.classList.remove('active');
        navList?.classList.remove('active');
      });
    });

    // Tour Modals
    const tourCards = document.querySelectorAll('.tour-card-container');
    const modalCloses = document.querySelectorAll('.modal-close');

    tourCards.forEach(card => {
      card.addEventListener('click', () => {
        const tourId = card.dataset.tour;
        const modal = document.getElementById(`modal-${tourId}`);
        if (modal) {
          modal.classList.add('active');
        }
      });
    });

    modalCloses.forEach(close => {
      close.addEventListener('click', () => {
        const tourId = close.dataset.close;
        const modal = document.getElementById(`modal-${tourId}`);
        if (modal) {
          modal.classList.remove('active');
        }
      });
    });

    // Close modal on outside click
    window.addEventListener('click', (e) => {
      if (e.target.classList.contains('modal')) {
        e.target.classList.remove('active');
      }
    });

    // Guide Carousel
    let currentSlide = 0;
    const slides = document.querySelectorAll('#guideCarousel .carousel-slide');
    const dots = document.querySelectorAll('#guideDots .dot');
    const prevBtn = document.getElementById('guidePrev');
    const nextBtn = document.getElementById('guideNext');

    function showSlide(index) {
      slides.forEach(slide => slide.classList.remove('active'));
      dots.forEach(dot => dot.classList.remove('active'));
      
      currentSlide = (index + slides.length) % slides.length;
      slides[currentSlide].classList.add('active');
      dots[currentSlide].classList.add('active');
    }

    prevBtn?.addEventListener('click', () => {
      showSlide(currentSlide - 1);
    });

    nextBtn?.addEventListener('click', () => {
      showSlide(currentSlide + 1);
    });

    dots.forEach((dot, index) => {
      dot.addEventListener('click', () => {
        showSlide(index);
      });
    });

    // Auto-play carousel
    setInterval(() => {
      showSlide(currentSlide + 1);
    }, 5000);
  </script>


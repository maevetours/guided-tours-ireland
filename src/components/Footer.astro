---
const currentYear = new Date().getFullYear();

const socialLinks = [
  { name: 'GitHub', url: 'https://github.com/Iamcodio', icon: 'github' },
  { name: 'Twitter', url: 'https://twitter.com/iamcodio', icon: 'twitter' },
  { name: 'LinkedIn', url: 'https://linkedin.com/company/iamcodio', icon: 'linkedin' }
];

const footerLinks = [
  {
    title: 'Projects',
    links: [
      { label: 'Web Scraper', href: '/projects/web-scraper-engine' },
      { label: 'YouTube Intelligence', href: '/projects/youtube-intelligence' },
      { label: 'Sovereign Backend', href: '/projects/sovereign-backend' }
    ]
  },
  {
    title: 'Resources',
    links: [
      { label: 'Blog', href: '/blog' },
      { label: 'Manifesto', href: '/#manifesto' },
      { label: 'Documentation', href: '/docs' }
    ]
  },
  {
    title: 'Community',
    links: [
      { label: 'Discord', href: '/discord' },
      { label: 'GitHub', href: 'https://github.com/Iamcodio' },
      { label: 'Contact', href: '/contact' }
    ]
  }
];
---

<footer class="footer">
  <div class="footer-content">
    <!-- Main CTA -->
    <div class="footer-cta">
      <h3 class="cta-title">Ready to Enter the Vortex?</h3>
      <p class="cta-description">
        Join thousands of entrepreneurs discovering infinite value creation
      </p>
      <div class="cta-actions">
        <a href="/get-started" class="btn btn-primary">Get Started</a>
        <a href="/manifesto" class="btn btn-secondary">Learn More</a>
      </div>
    </div>
    
    <!-- Links Grid -->
    <div class="footer-grid">
      {footerLinks.map((section) => (
        <div class="footer-section">
          <h4 class="section-title">{section.title}</h4>
          <ul class="section-links">
            {section.links.map((link) => (
              <li>
                <a href={link.href} class="footer-link">{link.label}</a>
              </li>
            ))}
          </ul>
        </div>
      ))}
      
      <div class="footer-section">
        <h4 class="section-title">Connect</h4>
        <div class="social-links">
          {socialLinks.map((social) => (
            <a 
              href={social.url} 
              class="social-link" 
              aria-label={social.name}
              target="_blank"
              rel="noopener noreferrer"
            >
              <span class={`icon-${social.icon}`}></span>
            </a>
          ))}
        </div>
        <p class="newsletter-text">
          Subscribe to the Vortex Newsletter
        </p>
        <form class="newsletter-form">
          <input 
            type="email" 
            placeholder="your@email.com" 
            class="newsletter-input"
            required
          />
          <button type="submit" class="newsletter-button">→</button>
        </form>
      </div>
    </div>
    
    <!-- Bottom Bar -->
    <div class="footer-bottom">
      <div class="footer-logo">
        <span class="logo-text">I AM CODIO</span>
        <span class="tagline">You are CODIO. We are all CODIO.</span>
      </div>
      <div class="footer-legal">
        <p>© {currentYear} IAmCodio. All rights reserved.</p>
        <div class="legal-links">
          <a href="/privacy">Privacy</a>
          <span>•</span>
          <a href="/terms">Terms</a>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: linear-gradient(to bottom, transparent, rgba(0, 0, 0, 0.5));
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    margin-top: 5rem;
    padding-top: 5rem;
  }
  
  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem 2rem;
  }
  
  /* CTA Section */
  .footer-cta {
    text-align: center;
    margin-bottom: 4rem;
    padding: 3rem;
    background: rgba(139, 92, 246, 0.1);
    border: 1px solid rgba(139, 92, 246, 0.3);
    border-radius: 16px;
    backdrop-filter: blur(10px);
  }
  
  .cta-title {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, var(--codio-purple), var(--codio-blue));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .cta-description {
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: 2rem;
    font-size: 1.125rem;
  }
  
  .cta-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }
  
  /* Links Grid */
  .footer-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 3rem;
    margin-bottom: 3rem;
  }
  
  .footer-section {
    min-width: 200px;
  }
  
  .section-title {
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: white;
  }
  
  .section-links {
    list-style: none;
    padding: 0;
    margin: 0;
    space-y: 0.5rem;
  }
  
  .section-links li {
    margin-bottom: 0.5rem;
  }
  
  .footer-link {
    color: rgba(255, 255, 255, 0.6);
    text-decoration: none;
    transition: color 0.3s ease;
    font-size: 0.875rem;
  }
  
  .footer-link:hover {
    color: white;
  }
  
  /* Social Links */
  .social-links {
    display: flex;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }
  
  .social-link {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    color: rgba(255, 255, 255, 0.6);
    transition: all 0.3s ease;
  }
  
  .social-link:hover {
    background: rgba(139, 92, 246, 0.2);
    border-color: rgba(139, 92, 246, 0.5);
    color: white;
    transform: translateY(-2px);
  }
  
  /* Newsletter */
  .newsletter-text {
    color: rgba(255, 255, 255, 0.8);
    font-size: 0.875rem;
    margin-bottom: 0.5rem;
  }
  
  .newsletter-form {
    display: flex;
    gap: 0;
    max-width: 300px;
  }
  
  .newsletter-input {
    flex: 1;
    padding: 0.5rem 1rem;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 9999px 0 0 9999px;
    color: white;
    font-size: 0.875rem;
    transition: all 0.3s ease;
  }
  
  .newsletter-input::placeholder {
    color: rgba(255, 255, 255, 0.5);
  }
  
  .newsletter-input:focus {
    outline: none;
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(139, 92, 246, 0.5);
  }
  
  .newsletter-button {
    padding: 0.5rem 1rem;
    background: var(--gradient-primary);
    border: none;
    border-radius: 0 9999px 9999px 0;
    color: white;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
  }
  
  .newsletter-button:hover {
    transform: translateX(2px);
  }
  
  /* Bottom Bar */
  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    flex-wrap: wrap;
    gap: 2rem;
  }
  
  .footer-logo {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }
  
  .logo-text {
    font-size: 1.125rem;
    font-weight: 700;
    color: white;
  }
  
  .tagline {
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.6);
    font-style: italic;
  }
  
  .footer-legal {
    display: flex;
    align-items: center;
    gap: 2rem;
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.6);
  }
  
  .legal-links {
    display: flex;
    gap: 0.5rem;
    align-items: center;
  }
  
  .legal-links a {
    color: rgba(255, 255, 255, 0.6);
    text-decoration: none;
    transition: color 0.3s ease;
  }
  
  .legal-links a:hover {
    color: white;
  }
  
  /* Social Icons (basic implementation) */
  .icon-github::before { content: "G"; }
  .icon-twitter::before { content: "T"; }
  .icon-linkedin::before { content: "L"; }
  
  /* Responsive */
  @media (max-width: 768px) {
    .footer-cta {
      padding: 2rem 1rem;
    }
    
    .cta-title {
      font-size: 1.5rem;
    }
    
    .footer-grid {
      grid-template-columns: 1fr 1fr;
      gap: 2rem;
    }
    
    .footer-bottom {
      flex-direction: column;
      text-align: center;
    }
    
    .footer-legal {
      flex-direction: column;
      gap: 1rem;
    }
  }
</style>

<script>
  // Newsletter form handling
  const form = document.querySelector('.newsletter-form') as HTMLFormElement;
  
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const input = form.querySelector('.newsletter-input') as HTMLInputElement;
    const button = form.querySelector('.newsletter-button') as HTMLButtonElement;
    const email = input.value;
    
    // Show loading state
    button.textContent = '...';
    button.disabled = true;
    
    // Simulate API call
    setTimeout(() => {
      button.textContent = '✓';
      input.value = '';
      
      setTimeout(() => {
        button.textContent = '→';
        button.disabled = false;
      }, 2000);
    }, 1000);
  });
</script>